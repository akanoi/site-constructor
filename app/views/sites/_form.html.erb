<%= form_for @site, url: user_sites_path do |f| %>
  <% if site.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(site.errors.count, "error") %> prohibited this site from being saved:</h2>

      <ul>
      <% site.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :menu %>
    <%= f.select(:menu, options_for_select([['Vertical', 'Vertical'], ['Horizontal', 'Horizontal'],['Bottom', 'Bottom']])) %>
  </div>

  <div class="field">
    <%= f.label :tag_list, 'Tags (separated with comas)' %>
    <%= f.text_field :tag_list, data: { autocomplete_source: Tag.order(:name).map(&:name)} %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
