<div id="profile-main">
  <div class="user-info col-md-8">
    <div class="row">
      <div class="photo col-md-3">
        <img width="100" height="100" avatar="<%= @user.name %>">
      </div>

      <div class="date col-md-3">
        <% if current_user.id == @user.id or current_user.try(:admin) %>
          <p>
            <strong><%= t('.name') %>: </strong> 
            <input type="text" value="<%= @user.name %>">
          </p>
          <p>
            <strong><%= t('.birthday') %>: </strong> 
            <input type="date" value="<%= @user.birthday %>">
          </p>
        <% else %>
          <p>
            <strong><%= t('.name') %>: </strong> <%= @user.name %>
          </p>
          <p>
            <strong><%= t('.birthday') %>: </strong><%= @user.birthday %>
          </p>
        <% end %>
        <p>
          <strong><%= t('.points') %>:</strong> <%= @user.points or 0 %>
        </p>
      </div>
    </div>
  </div>

  <div class="sites col-md-3">
    <% @sites.each do |site| %>
      <% if site.title != "" %>
        <div class="site">
          <p><strong><%= t('.title') %>:</strong> <%= site.title %></p>
          <p><strong><%= t('.description') %>:</strong></p>
          <p class="description"><%= site.description %></p>
          <p><strong><%= t('.created') %>:</strong> <%= site.created_at.to_s(:db) %></p> 
        </div>
      <% end %>
    <% end %>
  </div>
</div>